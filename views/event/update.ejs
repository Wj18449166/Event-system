<form action="/event/update/<%= event.id %>" method="POST">


    <div class="row">
        <div class="col-sm-6 col-lg-6 col-xl-6">
            <lable>Event name</lable>
            <input type="text" , class="form-control" name="Event[name]" value="<%= event.name %>" required>
            <br>
            <lable>Short Description</lable>
            <textarea rows="7" class="form-control" name="Event[shortDes]" required><%= event.shortDes %></textarea>
            <br>
            <lable>Full Description</lable>
            <textarea rows="9" class="form-control" name="Event[fullDes]" required><%= event.fullDes %></textarea>

        </div>

        <div class="col-sm-6 col-lg-6 col-xl-6">

            <lable>Image URL</lable>
            <input type="text" , class="form-control" name="Event[imgURL]" value="<%= event.imgURL %>" required><br>

            <div>
                <lable>Organizer</lable>
                <div>
                    <!-- <select class="selectpicker show-tick form-control" data-width="250px" data-live-search="true" name="Event[organizer]"> -->
                    <select class="selectpicker form-control" data-width="250px" data-live-search="true" name="Event[organizer]">
                        <!-- <select class="selectpicker" name="Event[organizer]"> -->
                        <option>Please pick one:</option>
                        <option value="abc">ABC</option>
                        <option value="acb">ACB</option>
                    </select>
                </div>
                <br>
            </div>



            <lable>Event Date</lable>
            <div><input type="text" class="datepicker selectpicker show-tick form-control" name="Event[eventDate]"
                    value="<%= event.eventDate %>" /></div><br>


            <lable>Time</lable>
            <input type="text" , class="form-control" name="Event[time]" value="<%= event.time %>" required><br>

            <div>
                <lable>Venue</lable>
                <div>
                    <select class="selectpicker form-control" data-width="250px" data-live-search="true" name="Event[venue]"
                        value="<%= event.venue %>">
                        <option>Please pick one:</option>
                        <option value="kl">Kowloon</option>
                        <option value="acb">N.T</option>
                        <option value="acb">Hong Kong Island</option>
                    </select>
                </div>
                <br>
            </div>

            <lable>Quote</lable>
            <input type="number" , class="form-control" name="Event[quote]" value="<%= event.quote %>" required><br>

            <div>
                <label><input type="checkbox" name="Event[hightlig]" value="Hightlighted">
                    Hightlighted Event </label><br>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>


        </div>



        <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
</form>

