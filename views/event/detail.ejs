<!-- deatail.ejs -->
<div class="row">
    <div class="card col-sm-12 col-lg-12 col-xl-12">
        <div class="card-body">
            <h4>
                <%= event.name %>
            </h4>
            <div class="media">
                <img class="mr-3" src="<%= event.imgURL %>" style="max-width: 15rem">
                <div class="media-body">
                    <ul class="card list-group list-group-flush">
                        <li class="list-group-item">
                            <%= event.fullDes %>
                        </li>
                        <li class="list-group-item"><b>Organizer: </b>
                            <%= event.organizer %>
                        </li>
                        <li class="list-group-item"><b>Date: </b>
                            <%= event.eventDate %>
                        </li>
                        <li class="list-group-item"><b>Time: </b>
                            <%= event.time %>
                        </li>
                        <li class="list-group-item"><b>Venue: </b>
                            <%= event.venue %>
                        </li>
                        <li class="list-group-item"><b>Quota: </b>
                            <%= event.quote %>
                        </li>
                        <form method="POST" action="/event/delete/<%= event.id %>">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                        <form action="http://localhost:1337/Event/addEvent/<%= event.id %>" method="POST">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </form>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>